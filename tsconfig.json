{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es6"],
    "outDir": "out",
    "sourceMap": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noLib": false,
    "pretty": true,
    "rootDir": "."
  },
  "exclude": [
    "node_modules"
  ]
}